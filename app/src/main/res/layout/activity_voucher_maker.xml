<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputVoucherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Voucher Name"
        android:inputType="text"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textSelectedProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selected Products"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonSelectProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Products"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonAddVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Voucher"
        android:layout_marginTop="16dp" />
</LinearLayout>
